<div class="row">
	<div class="col s12 m8">
		<h3>{{story.title}}</h3>
		<small>{{{editIcon story.user.id user.id story.id}}}</small>
		<div class="card story">
			<div class="card-content">
				<span class="card-title">{{formatDate story.date 'Do MMMM YYYY'}}</span>
				{{{story.body}}}
			</div>
		</div>
		{{#if story.allowComments}}
		<div class="card">
			<div class="card-content">
				<span class="card-title">Comments</span>
				{{#if user}}
				<form action="/stories/comment/{{story.id}}" method="POST">
					<div class="input-field">
						<textarea name="commentBody" class="materialize-textarea"></textarea>
						<label>Add comment</label>
						<input type="submit" value="Submit" class="btn">
					</div>
				</form>
				{{else}}
				<p><a href="/auth/google">Please log in to leave a comment</a></p>
				{{/if}}
			</div>
		</div>
		{{#each story.comments}}
		<div class="card">
			<div class="card-content">
				<h5>{{commentBody}}</h5>
				<div class="chip">
					<img src="{{commentUser.image}}" alt="Person">
					<a href="/stories/user/{{commentUser.id}}">{{commentUser.firstName}} {{commentUser.lastName}}</a>
				</div>
				<br>
				<small>posted: {{formatDate commentDate 'do MMMM YYYY'}}</small>
			</div>
		</div>
		{{/each}}
		{{/if}}
	</div>
	<div class="col s12 m4">
		<div class="card center-align">
			<div class="card-content">
				<span class="card-title">{{story.user.firstname}} {{story.user.lastName}}</span>
				<img src="{{story.user.image}}" class="circle responsive-img">
			</div>
			<div class="card-action">
				<a href="/stories/user/{{story.user.id}}">More from {{story.user.firstName}}</a>
			</div>
		</div>
	</div>
</div>
